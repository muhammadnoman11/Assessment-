<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#F4F4F4"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/u_img"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder"
            />

        <ImageView
            android:id="@+id/detailBtn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:foreground="@drawable/ripple_effect"
            android:src="@drawable/baseline_arrow_back"
            android:rotation="180"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            app:tint="@color/black" />


        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/u_img"
            android:layout_marginTop="10dp"
            android:text="Name:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="5dp"
            />

        <TextView
            android:id="@+id/u_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/detailBtn"
            android:layout_toEndOf="@id/txt_name"
            android:lines="1"
            android:text="Greta Runte"
            android:textColor="@color/black"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_comp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/u_img"
            android:layout_below="@id/txt_name"
            android:layout_marginTop="8dp"
            android:text="Company:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="5dp"
            />

        <TextView
            android:id="@+id/u_comp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_comp_name"
            android:layout_below="@id/u_name"
            android:layout_marginTop="8dp"
            android:text="Greta Runte"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>